#if !defined(u8c_key_DHlzI0Min44ZJ3qF)
#define u8c_key_DHlzI0Min44ZJ3qF

#include <type_traits> /* std::is_unsigned_v */

template<u8c::arith T> constexpr auto u8c::abs(T const _val) noexcept -> T {
	if constexpr (std::is_unsigned_v<T>) {
		return _val;
	}
	else {
		if (_val < T{0x0}) {
			return -_val;
		}
		return _val;
	}
}

#endif
