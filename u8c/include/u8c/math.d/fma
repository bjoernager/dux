#if !defined(u8c_key_3Xt4uPu34bdh53dB)
#define u8c_key_3Xt4uPu34bdh53dB

template<u8c::arith T> constexpr auto u8c::fma(T const _x,T const _y,T const _z) noexcept -> T {
	return _x * _y + _z;
}

