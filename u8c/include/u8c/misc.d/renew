#if !defined(u8c_key_PDOxHgtcAGQDjPjZ)
#define u8c_key_PDOxHgtcAGQDjPjZ

#include <algorithm> /* std::copy_n, std::min */

template<typename T> auto constexpr u8c::renew(T * const u8c_restr _ptr,u8c::size const _sz,u8c::size const _newsz) -> T * {
	T * const u8c_restr ptr = ::new T[_newsz];
	std::copy_n(_ptr,std::min(_sz,_newsz),ptr);
	::delete[] _ptr;
	return ptr;
}

#endif
