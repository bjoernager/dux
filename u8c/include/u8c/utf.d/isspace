#if !defined(u8c_key_fRbwVyyBwfrm0Slq)
#define u8c_key_fRbwVyyBwfrm0Slq

#include <stdexcept> /* std::domain_error */

constexpr auto u8c::isspace(char32_t const _chr) -> bool {
	if(_chr > u8c::unimax) [[unlikely]] {
		throw std::domain_error("Unicode codepoint too big!");
	}
	switch(_chr) {
	[[likely]] default:
		return false;
	case U'\u0009': /* HORIZONTAL TABULATION */
		[[fallthrough]];
	case U'\u000A': /* NEW LINE */
		[[fallthrough]];
	case U'\u000B': /* VERTICAL TABULATION */
		[[fallthrough]];
	case U'\u000C': /* FORM FEED */
		[[fallthrough]];
	case U'\u000D': /* CARRIAGE RETURN */
		[[fallthrough]];
	case U'\u0020': /* SPACE */
		return true;
	}
}

#endif