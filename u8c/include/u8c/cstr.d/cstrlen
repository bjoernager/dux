#if !defined(u8c_key_2yXSG12yvwzu2XCt)
#define u8c_key_2yXSG12yvwzu2XCt

constexpr auto u8c::cstrlen(char const * const u8c_restr _str) noexcept -> u8c::size {
	auto sz = 0x0uz;
	for (u8c::size n = 0x0uz;;n += 0x1uz) {
		if (_str[n] == '\u0000') [[unlikely]] {
			break;
		}
		sz += 0x1uz;
	}
	return sz;
}

#endif
